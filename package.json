{
  "name": "streamlings",
  "private": true,
  "packageManager": "pnpm@9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "lattice:setup": "cd apps/lattice && mix setup",
    "lattice:dev": "cd apps/lattice && mix phx.server",
    "lattice:test": "cd apps/lattice && mix test"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@tailwindcss/oxide",
      "better-sqlite3"
    ]
  }
}