# Database (local development uses local SQLite file)
DATABASE_URL=file:local.db

# Clerk Authentication
# For Cloudflare, set CLERK_PUBLISHABLE_KEY as a secret; PUBLIC_ variant remains for local/dev overrides.
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Streamling State Worker
PUBLIC_WORKER_URL=http://localhost:8787

# Default streamer ID (used when no authenticated streamer is found)
# Once Twitch OAuth is connected, the dashboard uses the authenticated user's streamling ID instead.
PUBLIC_DEFAULT_STREAMER_ID=default-streamer
